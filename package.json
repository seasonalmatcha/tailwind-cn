{
  "name": "tailwind-cn",
  "version": "0.0.1",
  "description": "Wrapper to merge tailwind classes on top of twMerge and clsx",
  "private": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "ci": "pnpm run lint && pnpm run test && pnpm run build",
    "dev": "vitest",
    "lint": "tsc",
    "release": "pnpm run lint && pnpm run test && pnpm run build && changeset publish",
    "test": "vitest run"
  },
  "keywords": [
    "tailwindcss",
    "clsx",
    "tailwind-merge",
    "css",
    "classnames"
  ],
  "author": "Alan H (me@alanh.dev)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/seasonalmatcha/tailwind-cn"
  },
  "bugs": {
    "url": "https://github.com/seasonalmatcha/tailwind-cn/issues"
  },
  "homepage": "https://github.com/seasonalmatcha/tailwind-cn",
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@types/node": "^20.4.9",
    "clsx": "^2.0.0",
    "tailwind-merge": "^1.14.0",
    "tsup": "^7.2.0",
    "typescript": "^5.1.6",
    "vitest": "^0.34.1"
  },
  "peerDependencies": {
    "clsx": "^2",
    "tailwind-merge": "^1"
  }
}
